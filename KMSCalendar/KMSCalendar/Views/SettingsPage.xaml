<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMSCalendar.Views.SettingsPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="SettingsStackLayout"
                   TargetType="StackLayout">
                <Setter Property="Orientation"
                        Value="Horizontal" />

                <Setter Property="HorizontalOptions"
                        Value="CenterAndExpand" />

                <Setter Property="Margin"
                        Value="0,20,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout BackgroundColor="{DynamicResource NavigationBackground}">
            <StackLayout Style="{StaticResource SettingsStackLayout}">
                <Label Text="Theme:"
                       FontSize="Medium" />

                <Picker x:Name="ThemePicker"
                        HorizontalOptions="End"
                        TextColor="{DynamicResource Text}"
                        SelectedIndexChanged="ThemePicker_SelectedIndexChanged" />

            </StackLayout>

            <StackLayout Style="{StaticResource SettingsStackLayout}">
                <Label Text="Show Day Names on Calendar:"
                       FontSize="Medium" />

                <Switch x:Name="CalendarDaySwitch"
                        HorizontalOptions="End"
                        Toggled="CalendarDaySwitch_Toggled" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>