<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMSCalendar.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Global Styles -->
            <!--https://stackoverflow.com/questions/18200902/changing-the-styles-at-runtime-in-wpf-->
            <Color x:Key="NavigationBackground">#FFF</Color>
            <Color x:Key="NavigationPrimary">#154360</Color>
            <Color x:Key="NavigationSecondary">#603215</Color>
            <Color x:Key="NavigationTertiary">#C9682C</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor"
                        Value="{StaticResource NavigationPrimary}" />
                <Setter Property="BarTextColor"
                        Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>