<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMSCalendar.Views.MenuPage"
             Title="Menu">

    <!-- This view is the hamburger menu -->
    <StackLayout VerticalOptions="FillAndExpand"
                 BackgroundColor="{DynamicResource NavigationBackground}">

        <Frame BorderColor="{DynamicResource NavigationPrimary}"
               CornerRadius="0"
               Margin="-10,-10,-10,0">

            <StackLayout>
                <Image HeightRequest="30"
                       WidthRequest="30" 
                       Source="userIcon.png" />

                <Label HorizontalOptions="Center"
                       Margin="0,5,0,0"
                       Text="SinghIsKing"
                       FontSize="Small" />
            </StackLayout>
        </Frame>

        <ListView x:Name="MenuListView"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Label Text="{Binding Title}"
                                   TextColor="{DynamicResource Text}"
                                   FontSize="20" />
                        </Grid>   
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>