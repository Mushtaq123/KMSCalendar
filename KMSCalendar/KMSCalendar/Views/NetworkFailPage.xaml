<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="KMSCalendar.Views.NetworkFailPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:ext="clr-namespace:KMSCalendar.Extensions"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             BackgroundImage="{ext:ImageResource background.png,
                                                 FolderName=Shared}"
             mc:Ignorable="d">

    <StackLayout VerticalOptions="Center">
        <Label HorizontalOptions="CenterAndExpand"
               Text="Network Connection Failed"
               FontSize="Large"
               TextColor="White" />

        <Button x:Name="RetryButton"
                HorizontalOptions="Center"
                Margin="0,30,0,0"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Text="Retry"
                TextColor="{DynamicResource NavigationTertiary}"
                Clicked="RetryButton_Clicked" />
    </StackLayout>
</ContentPage>