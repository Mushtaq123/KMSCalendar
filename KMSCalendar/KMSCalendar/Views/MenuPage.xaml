<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="KMSCalendar.Views.MenuPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Menu">

    <!--  This view is the hamburger menu  -->
    <StackLayout VerticalOptions="Start"
                 BackgroundColor="{DynamicResource NavigationBackgroundLight}">

        <StackLayout BackgroundColor="{DynamicResource NavigationPrimary}">
            <Image HeightRequest="30"
                   WidthRequest="30"
                   Source="calendar_white.png" />

            <Label x:Name="UserNameLabel"
                   HorizontalOptions="Center"
                   Margin="0,5,0,0"
                   Text="{Binding}"
                   FontSize="Small"
                   TextColor="White" />
        </StackLayout>

        <Button x:Name="SearchButton"
                Text="Class Search"
                BorderWidth="0"
                BackgroundColor="{DynamicResource NavigationTertiary}"
                Padding="5"
                CornerRadius="5"
                Clicked="SearchButton_Clicked"/>

        <ListView x:Name="MenuListView"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Image HeightRequest="20"
                                       WidthRequest="20"
                                       Source="{Binding Icon}"
                                       Margin="20,5,0,-3" />

                                <Label Margin="60,15,0,7"
                                       Text="{Binding Title}"
                                       FontSize="20"
                                       TextColor="{DynamicResource Text}" />

                            </StackLayout>

                            <BoxView HeightRequest="0.5"
                                     BackgroundColor="{DynamicResource NavigationBackground}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>