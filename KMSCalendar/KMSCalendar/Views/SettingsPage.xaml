<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMSCalendar.Views.SettingsPage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="{DynamicResource NavigationBackground}">
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand"
                         Margin="0,20,0,0">
                <Label Text="Theme:"
                       FontSize="Medium" />
                <Picker x:Name="ThemePicker"
                        HorizontalOptions="End"
                        TextColor="{DynamicResource Text}"
                        SelectedIndexChanged="ThemePicker_SelectedIndexChanged" />

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>